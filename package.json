{
  "name": "step-validators",
  "version": "1.0.0",
  "description": "A flexible validation library with customizable rules for strings and numbers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:dev": "concurrently \"tsc -w\" \"tsc-alias -w\"",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:index": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/index.test.ts"
  },
  "keywords": [
    "step",
    "validation",
    "validator",
    "validators",
    "string",
    "number",
    "sanitization",
    "protocol",
    "host",
    "port",
    "query",
    "fragment"
  ],
  "author": "Buqi Liao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BuqiLiao/url-step-validator.git"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/validator": "^13.12.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.4"
  }
}
